{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "declaration": true,                // 타입 정의 파일(.d.ts) 생성 필수
    "emitDecoratorMetadata": true,      // 업로드하신 코드의 데코레이터 사용 지원
    "experimentalDecorators": true,     // 데코레이터 사용 지원
    "outDir": "./dist",                 // 빌드 결과물 경로
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": false,           // 라이브러리 빌드 시 false 권장
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],           // 배포할 소스 코드 경로
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}